<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.conan.mapper.UploadFileMapper">
	<insert id='insert'>
		insert into t_img(uuid, uploadpath,filename,urrid, num)
		values(#{uuid},#{uploadPath},#{filename},#{urrid},#{num})
	</insert>
	
	<delete id='delete'>
	delete from t_img where urrid=#{urrid}
	</delete>
	
	<select id='findbyrid' resultType='org.conan.domain.UploadFile'>
		select * from t_img where urrid=#{urrid}
	</select>
	
	<select id='allimg' resultType='org.conan.domain.UploadFile'>
		select * from t_img 
	</select>
	
	<select id='getold' resultType="org.conan.domain.UploadFile">
		select * from t_img where uploadpath=to_char(sysdate-1,'yyyy\MM\dd')
	</select>
</mapper>